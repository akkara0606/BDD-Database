<br />
<div ng-controller="EmpController" ng-init="Init();">
    <div class="card card-orange">
        <div class="card-header">
            <div class="row mb-2">
                <div class="col-md-8">
                    <h3>Employee Detail</h3>
                </div>
                <div class="col-md-2 text-right">
                    <a class="btn btn-success btn-md text-white" ng-click="ShowModalAdd();"><i class="fas fa-plus-circle text-white"></i>&nbsp;Add</a>
                </div>
                <div class="col-md-2">
                    <input class="form-control" ng-model="search" placeholder="Search" />
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered ">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>En</th>
                        <th>Name</th>
                        <th>Age</th>
                        <th>DepartmentID</th>
                        <th>StartDate</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in dataEmp | filter : search">
                        <td>{{$index+1}}</td>
                        <td>{{item.en}}</td>
                        <td>{{item.name}}</td>
                        <td>{{item.age}}</td>
                        <td>{{item.departmentId}}</td>
                        <td>{{item.startDate | date : 'dd/MM/yyyy'}}</td>
                        <td>
                            <a class="btn btn-warning btn-sm text-white" ng-click="ShowModalEdit(item.en);"><i class="fas fa-pen"></i></a>
                            <a class="btn btn-danger btn-sm text-white" ng-click="Delete(item.en);"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>


    <div class="modal fade" id="modalAdd" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-left" style="background-color:deepskyblue">
                    <h4 class="modal-title w-100 font-weight-bold text-white">Add Employee</h4>
                </div>
                <form>
                    <div class="modal-body mx-3 text-left">
                        <div class="form-group">
                            <label>En.<a class="text-danger">*</a></label>
                            <input type="text" maxlength="10" ng-model="emp.en" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>Name<a class="text-danger">*</a></label>
                            <input type="text" maxlength="50" ng-model="emp.name" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>Age<a class="text-danger">*</a></label>
                            <input type="number" ng-model="emp.age" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>DepartmentId<a class="text-danger">*</a></label>
                            <input type="text" maxlength="3" ng-model="emp.departmentId" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>StartDate<a class="text-danger">*</a></label>
                            <input type="date" ng-model="emp.startDate" class="form-control" required />
                        </div>
                    </div>
                    <div class="modal-footer justify-content-end">
                        <button type="submit" class="btn btn-sm btn-success" ng-click="AddNew(emp);">Save </button>
                        <button class="btn btn-sm btn-dark" ng-click="ResetForm();" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-left" style="background-color:deepskyblue">
                    <h4 class="modal-title w-100 font-weight-bold text-white">Edit Employee</h4>
                </div>
                <form>
                    <div class="modal-body mx-3 text-left">
                        <div class="form-group">
                            <label>En.<a class="text-danger">*</a></label>
                            <input type="text" maxlength="10" ng-model="dataPerEmp.en" class="form-control" readonly />
                        </div>
                        <div class="form-group">
                            <label>Name<a class="text-danger">*</a></label>
                            <input type="text" maxlength="50" ng-model="dataPerEmp.name" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>Age<a class="text-danger">*</a></label>
                            <input type="number" ng-model="dataPerEmp.age" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>DepartmentId<a class="text-danger">*</a></label>
                            <input type="text" maxlength="3" ng-model="dataPerEmp.departmentId" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>StartDate<a class="text-danger">*</a></label>
                            <input type="text" ng-model="dataPerEmp.startDate" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="modal-footer justify-content-end">
                        <button type="submit" class="btn btn-sm btn-success" ng-click="Update(dataPerEmp);">Save </button>
                        <button class="btn btn-sm btn-dark" ng-click="ResetForm();" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/app/controller/EmpController.js"></script>
}

